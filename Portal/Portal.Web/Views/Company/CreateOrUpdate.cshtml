@using  Portal.Application.Dto
@model CompanyDto
@{
    ViewData["Title"] = "CreateOrUpdate";

    string PageTitle = "Save";
    if (Model.Id > 0)
    {
        PageTitle = "Update";

    }
}

<div class="row">
    <div class="form-group">
        <div class="col-md-8">
            <h4>@PageTitle @Model.Name</h4>
        </div>
        <div class="col-md-4" style="text-align:right;margin-top: 10px">
            @Html.ActionLink("Back", "", "Company")
        </div>
    </div>
</div>
<div class="row">
    <form asp-action="CreateOrUpdate" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LegalName"></label>
            <input asp-for="LegalName" class="form-control" />
            <span asp-validation-for="LegalName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">@PageTitle</button>
        </div>
    </form>
</div>