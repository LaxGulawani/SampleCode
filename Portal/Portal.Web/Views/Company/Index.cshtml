@using Portal.Application.Dto
@model List<Portal.Application.Dto.CompanyListDto>
@{
    ViewData["Title"] = "Index";
}
<environment include="Development">
    <script src="~/view-resources/company/index.js"></script>
</environment>
<div class="row">
    <div class="col-md-12 pull-right" style="text-align:right">
        <button type="button" id="addemployee" onclick="createCompany()" class="btn btn-info" data-toggle="modal" data-target="#CreateEditCompany">Add Company</button>
        </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <td class="col-lg-8">
                            Name
                        </td>
                        <td class="col-lg-4">
                            Action
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CompanyListDto company in Model)
                    {
                        <tr>
                            <td>
                                @company.Name
                            </td>
                            <td>
                                <a href="#" onclick="editCompany(@company.Id)" data-toggle="modal" data-target="#CreateEditCompany">Edit</a>|
                                @Html.ActionLink("Delete", "Delete", "Company", new { companyId = company.Id })
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="CreateEditCompany">
    <div id="CreateEditCompanyDialog" class="modal-dialog">
    </div>
</div>
